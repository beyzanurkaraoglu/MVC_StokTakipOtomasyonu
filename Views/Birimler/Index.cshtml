

@using MVC_StokTakipOtomasyonu
@model List<MVC_StokTakipOtomasyonu.Models.Entity.Birimler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2>Birim Listesi</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>
                ID
            </td>
            <td>
                Birim
            </td>
            <td>
                Açıklama
            </td>
            <td>Sil</td>
            <td>Güncelle</td>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Birim</td>
                <td>@item.Açıklama</td>
                <td><a href="/Birimler/SilBilgiGetir/@item.ID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Birimler/GüncelleBilgiGetir/@item.ID" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }

    </tbody>
</table>
<a href="/Birimler/Ekle/" class="btn btn-success" style="margin-top:10px;">Birim Ekle</a>


